[ -e /etc/config/ubootenv ] && exit 0

touch /etc/config/ubootenv

. /lib/uboot-envtools.sh
. /lib/functions.sh

board=$(board_name)

ubootenv_add_mtd() {
	local idx="$(find_mtd_index "${1}")"
	[ -n "$idx" ] && \
		ubootenv_add_uci_config "/dev/mtd$idx" "${2}" "${3}" "${4}" "${5}"
}

case "$board" in
8devices,mango-dvk|\
8devices,mango-dvk-sfp|\
cambiumnetworks,xe3-4)
	ubootenv_add_mtd "0:APPSBLENV" "0x0" "0x10000" "0x10000"
	;;
cmiot,ax18|\
qihoo,360v6|\
redmi,ax5|\
xiaomi,ax1800|\
glinet,gl-ax1800|\
glinet,gl-axt1800|\
zn,m2|\
netgear,wax214|\
netgear,wax610|\
netgear,wax610y)
	ubootenv_add_mtd "0:appsblenv" "0x0" "0x40000" "0x20000" "2"
	;;
tplink,eap610-outdoor|\
tplink,eap623od-hd-v1|\
tplink,eap625-outdoor-hd-v1)
	ubootenv_add_mtd "0:appsblenv" "0x0" "0x0" "0x40000" "0x20000"
	;;
jdcloud,re-cs-02|\
jdcloud,re-ss-01|\
redmi,ax5-jdcloud)
	mmcpart="$(find_mmc_part 0:APPSBLENV)"
	[ -n "$mmcpart" ] && \
		ubootenv_add_uci_config "$mmcpart" "0x0" "0x40000" "0x20000" "2"
	;;
linksys,mr7350|\
linksys,mr7500)
	ubootenv_add_mtd "u_env" "0x0" "0x40000" "0x20000" "2"
	;;
yuncore,fap650)
	ubootenv_add_mtd "0:appsblenv" "0x0" "0x10000" "0x10000"
	;;
esac

config_load ubootenv
config_foreach ubootenv_add_app_config

exit 0
